<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="/flats">Simple Airbnb</a>
  <div class="ml-auto flex">
    <a class="btn btn-outline-dark my-2 my-sm-0 ml-2" href="/flats/new">Add flat</a>
  </div>
</nav>

<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1><strong>All our flats </strong>(<%= Flat.count %>)</h1>
    </div>
  </div>

<div class="row">
  <% @flats.each do |flat| %>
    <div class="col-4">
      <div class="flat-card">
        <div class="flat-card-content">
          <div class="flat-card-title">
            <h4><%= flat.name %></h4>
          </div>
           <p><%= flat.address %></p>
            <div class="flex">
            <div class="flex ml-3">
              <i class="fas fa-user-friends"></i> <span><%= flat.number_of_guests %></span>
            </div>
            <div class="flex ml-3">
              <i class="fas fa-euro-sign"></i> <%= flat.price_per_night %>
            </div>
          </div>
        </div>
        <div class="flat-card-actions">
        <%= link_to 'More info', flat_path(flat) %>
        <%= link_to 'Edit', edit_flat_path(flat), class: 'ml-3 text-warning'%>
        <%= link_to 'Remove', flat_path(flat), method: :delete, data: { confirm: "Are you sure?" }, class: 'ml-3 text-danger'%>
        </div>
      </div>
    </div>
  <% end %>
</div>

</div>

